<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance50">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance33">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">33%</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent.R25" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Button.Match" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/fragment_vertical_margin</item>
        <item name="android:padding">@dimen/fragment_vertical_margin</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent.R25</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent.R25</item>
    </style>

    <style name="ShapeAppearance.Corner50" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Camera" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="FAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabCustomSize">64dp</item>
        <item name="iconSize">32dp</item>
        <item name="maxImageSize">40dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Corner50</item>
    </style>

    <style name="TextButtonSmall" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>